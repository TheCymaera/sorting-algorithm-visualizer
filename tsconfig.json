{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",

		"moduleResolution": "nodenext",
		
		"strictNullChecks": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noUncheckedIndexedAccess": true,
		"alwaysStrict": true,

		"verbatimModuleSyntax": false,
		"preserveConstEnums": true,

		"skipDefaultLibCheck": true,
		"noEmit": true,

		"lib": ["ES2020", "DOM", "DOM.Iterable"],

		"baseUrl": ".",
	}
}